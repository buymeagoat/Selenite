# Production Environment Configuration
# Copy to .env and customize for your production deployment

# Environment
ENVIRONMENT=production

# Database
# Use PostgreSQL in production for better concurrency
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/selenite

# Security
# CRITICAL: Generate a secure secret key!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-VALUE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Storage
# Use absolute paths in production
MEDIA_STORAGE_PATH=/var/lib/selenite/media
TRANSCRIPT_STORAGE_PATH=/var/lib/selenite/transcripts
MODEL_STORAGE_PATH=/var/lib/selenite/models

# Transcription
MAX_CONCURRENT_JOBS=3
DEFAULT_WHISPER_MODEL=medium
DEFAULT_LANGUAGE=auto

# Server
HOST=0.0.0.0
PORT=8100
# CRITICAL: Set your production frontend URL(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging
LOG_LEVEL=INFO
