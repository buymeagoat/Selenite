{
  "name": "selenite-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "uvicorn app.main:app --port 8000 --reload --app-dir ../backend/app",
    "e2e:full": "concurrently -k \"uvicorn app.main:app --port 8000 --app-dir ../backend/app\" \"vite\" & wait-on http://localhost:5173/login && playwright test",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "qa": "npm run type-check && npm run lint && npm run test",
    "qa:quick": "npm run type-check && npm run lint",
    "format": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:ci": "playwright test --reporter=list",
    "prepare": "cd .. && husky install frontend/.husky"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "lucide-react": "^0.553.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-router-dom": "^6.23.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.14.10",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^15.8.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.47.0",
    "vite": "^5.4.21",
    "vitest": "^1.4.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.0.1",
    "start-server-and-test": "^2.0.3"
  }
}
