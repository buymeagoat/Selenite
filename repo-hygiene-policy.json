{
  "policy_version": "1.0.0",
  "last_updated": "2025-11-22",
  "allowed_databases": [
    "selenite.db",
    "selenite.test.db",
    "backend/selenite.db"
  ],
  "storage": {
    "canonical_root": "storage",
    "allowed_subdirectories": [
      "media",
      "transcripts"
    ],
    "test_subdirectories": [
      "test-media",
      "test-transcripts"
    ],
    "legacy_paths": [
      "backend/storage"
    ]
  },
  "must_be_empty": [
    "storage/test-media",
    "storage/test-transcripts",
    "frontend/playwright-report",
    "frontend/test-results"
  ],
  "forbidden_globs": [
    "frontend/playwright-report/**",
    "frontend/test-results/**"
  ],
  "require_clean_git_status": false,
  "log_directories": [
    {
      "path": "logs",
      "max_size_mb": 200
    },
    {
      "path": "docs/memorialization/test-runs",
      "max_entry_count": 50
    }
  ]
}
